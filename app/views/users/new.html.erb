<style>
body {
    background-color: lightblue;
}

h1 {
    color: white;
    text-align: center;
}

p {
    font-family: verdana;
    font-size: 20px;
}
</style>
<center>
<h1>Signup!</h1>

<%= form_with scope: :user,url: users_path , local: true do |form| %>
 
 <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> Signup error:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :Email %><br>
    <%= form.text_field :email %>
  </p>
  
  <p>
    <%= form.label :Password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.label :Password_Confirmation %><br>
    <%= form.password_field :password_confirmation %>
  </p>
 
  <p>
    <%= form.submit "Sign UP " %>
  </p>
  
  <% end %><br>
  Already have an account Please Login?&nbsp&nbsp<%= link_to '<button type="button"> Login</button>'.html_safe, 
  login_path %>
</center>