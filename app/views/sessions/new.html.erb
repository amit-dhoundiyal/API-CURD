 <style>
body {
    background-color: lightblue;
}

h1 {
    color: white;
    text-align: center;
}

p {
    font-family: verdana;
    font-size: 20px;
}
</style>
 <center>
<h1>Login!</h1>

<%= form_with model: @user,url: login_path , local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> Login  errors:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :Email %><br>
    <%= form.text_field :email %>
  </p>
  
  <p>
    <%= form.label :Password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Login " %>
  </p>
 
  <% end %><br>
  Do not have account Please Sign Up?&nbsp&nbsp<%= link_to '<button type="button"> Sign Up</button>'.html_safe, new_user_path %>
 </center>